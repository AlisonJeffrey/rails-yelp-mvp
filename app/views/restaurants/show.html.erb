<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><em><%= @restaurant.category.capitalize %> Cuisine</em></p>
  <p><%= Faker::Restaurant.description %></p>
  <p><strong>Rating:</strong> ★★★★★</p>
  <p><strong>Price range:</strong> ¥¥¥¥</p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
  <hr>
  <h4>Reviews</h4>
    <ul>
      <% if @restaurant.reviews.any? %>
        <% @restaurant.reviews.each do |review| %>
          <li>
            <p><%= review.content %><br><%= review.rating %> out of 5 stars</p>
          </li>
        <% end %>
      <% end %>
    </ul>
  <hr>
  <%= link_to 'Back to Restaurants', restaurants_path %>
</div>
